@page
@model RPG_game.Pages.PagesModel
@using RPG_game.Model
@{
    ViewData["Title"] = "Pages";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pages</title>
</head>
<body>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <div class="text-center">
        <h1 class="display-4">@Model.Location.Name</h1>
        <p>@Model.Location.Description</p>
            @foreach (var item in Model.Location.Paths)
            {
                <a asp-page="/Pages" asp-route-to="@item.NextLocationId" class="btn btn-primary">@item.PathDescription</a>
                <script>console.log(@item.NextLocationId)</script>
            }
        </div>
</body>
</html>
